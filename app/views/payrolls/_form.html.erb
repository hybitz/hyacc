<script>
  $(document).ready(function() {
    hyacc.init_datepicker();

    var form = $('.payroll_form form');
    form.submit(function() {
      return checkForm(this);
    });

    var salary = form.find('.salary');
    salary.change(function() {
      loadInsurance(form);
    });
  });

  function loadInsurance(form) {
    var url = '<%= url_for :action => 'auto_calc' %>';
    var params = form.serialize();

    $.getJSON(url, params, function(taxes) {
      form.find('input[name*="\[health_insurance\]"]').val(taxes.health_insurance);
      form.find('input[name*="\[pension\]"]').val(taxes.pension);
      form.find('input[name*="\[employment_insurance\]"]').val(taxes.employment_insurance);
      form.find('input[name*="\[income_tax\]"]').val(taxes.income_tax);
      form.attr('insurance_loaded', true);
    });
  }

  function checkForm(form) {
    var health_insurance = $(form).find('input[name*="\[health_insurance\]"]').val();
    var pension = $(form).find('input[name*="\[pension\]"]').val();
    var inhabitant_tax = $(form).find('input[name*="\[inhabitant_tax\]"]').val();
    var result = true;

    if(result && health_insurance == 0){
      result = window.confirm('健康保険料が0円です。登録しますか？')
    }

    if(result && pension == 0){
      result = window.confirm('厚生年金保険料が0円です。登録しますか？')
    }

    if(result && inhabitant_tax == 0){
      result = window.confirm('住民税が0円です。登録しますか？')
    }

    return result;
  }
</script>

