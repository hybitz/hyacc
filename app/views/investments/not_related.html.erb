
<% if @journal_details %>
<%= render 'common/message' %>
  <table id="investment_container">
    <tr>
      <th>年月</th>
      <th>日</th>
      <th>摘要</th>
      <th>勘定科目</th>
      <th>金額</th>
      <th>伝票</th>
      <th />
    </tr>
    <% Array(@journal_details).each do |jd| %>
    <tr class="hover">
        <td><%= jd.journal_header.ym %></td>
        <td><%= jd.journal_header.day %></td>
        <td><%= jd.journal_header.remarks %></td>
        <td><%= jd.account_name %></td>
        <td class="amount"><%= to_amount(jd.journal_header.amount) %></td>
        <td><%= link_to '参照',
              journal_path(jd.journal_header.id, :copy_link => false),
              :remote => true %></td>
        <td><%= link_to '関連付け', relate_investments_path(:journal_header_id => jd.journal_header.id), :remote => true %></td>
    </tr>
    <% end %>
</table>
<% end %>
