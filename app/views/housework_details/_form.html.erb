<script>
  $(document).ready(function() {
    $('#housework_detail_account_id').change(function() {
      var url = '<%= url_for :controller=>'master_data', :action=>'get_sub_accounts' %>';
      var params = {
        account_id: $(this).val(),
        format: 'json',
        order: 'code'
       };

      $.get(url, params, function(data) {
        replace_options('#housework_detail_sub_account_id', data);
      });
    }).change();
  });
</script>

<%= flash_notice %>

<%= form_for [:housework, @hwd], :remote => true do |f| %>
  <%= f.hidden_field :housework_id %>

  <div style="margin:0px 10px 0px 0px; text-align: right;">
    <%= f.submit %>
  </div>
  
  <table style="margin:5px;">
    <tr>
      <th>勘定科目</th>
      <th>補助科目</th>
      <th>事業費率</th>
    </tr>
    <tr>
      <td align="center">
        <% if @hwd.id %>
         <%= @hwd.account.name %>
        <% else %>
         <%= h_account_select('housework_detail', 'account_id') %>
         <% end %>
      </td>
      <td align="center">
        <% if @hwd.id %>
         <%= @hwd.sub_account.name if @hwd.sub_account %>
        <% else %>
         <%= h_sub_account_select('housework_detail') %>
        <% end %>
      </td>
      <td align="center">
        <%= f.text_field :business_ratio, :maxlength => 6, :size => 4 %>
      </td>
    </tr>  
  </table>
<% end %>
