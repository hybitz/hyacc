<div  style="margin: 10px;">
    <table class="none_border">
      <tr>
        <td class="none_border"><b>有価証券の内訳書</b></td>
      </tr>
    </table>
    <br/>
    <table>
      <thead>
        <tr>
          <th rowspan="3" width="100">区分／種類／銘柄</th>
          <th colspan="2">期末現在高</th>
          <th colspan="4">期中増（減）の明細</th>
          <th rowspan="3" width="100">摘要</th>
        </tr>
        <tr>
          <th rowspan="2">数量</th>
          <th rowspan="2">金額</th>
          <th>異動年月日</th>
          <th rowspan="2">数量</th>
          <th rowspan="2">金額</th>
          <th>売却(買入)先の名称(氏名)</th>
        </tr>
        <tr>
          <th>異動事由</th>
          <th>売却(買入)先の所在地(住所)</th>
        </tr>
      </thead>

      <% @investments.each do |investment| %>
        <tr>
          <td rowspan="2"><%= investment[:formal_name] %></td>
          <td rowspan="2" class="quantity"><%= to_amount(investment[:last_shares]) %></td>
          <td rowspan="2" class="amount"><%= to_amount(investment[:last_trading_value]) %></td>
          <td><%= format_wareki_year_month_day(investment[:ymd]) %></td>
          <td rowspan="2" class="quantity"><%= to_amount(investment[:shares]) %></td>
          <td rowspan="2" class="amount"><%= to_amount(investment[:trading_value]) %></td>
          <td><%= investment[:bank_name] %></td>
          <td rowspan="2"><%= investment[:etc] %></td>
        </tr>
        <tr>
          <td><%= investment[:reason] %></td>
          <td><%= investment[:address] %></td>
        </tr>
      <% end %>

      <tr>
        <td rowspan="2">計</td>
        <td rowspan="2" />
        <td rowspan="2" />
        <td />
        <td rowspan="2" />
        <td rowspan="2" />
        <td />
        <td rowspan="2" />
      </tr>
      <tr>
        <td />
        <td />
      </tr>
    </table>
</div>