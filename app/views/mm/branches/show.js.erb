var options = {
  title: '<%= @title + '　参照' %>',
  buttons: [
    {
      text: '編集',
      click: function() {
        hyacc.current_dialog().close();
        $.get('<%= url_for edit_mm_branch_path(@branch) %>');
      }
    },
    {
      text: '子部門追加',
      click: function() {
        hyacc.current_dialog().close();
        $.get('<%= url_for new_mm_branch_path(:parent_id => @branch.id) %>');
      }
    }
  ]
};

hyacc.current_dialog(options).show('<%=j render 'show' %>');
