<%= form_for [:mm, @bo], :remote => true do |f| %>
  <%= flash_notice %>
  <%= f.hidden_field :company_id %>

  <table>
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :prefecture_code %></th>
      <td><%= f.collection_select :prefecture_code, @prefectures, 'code', 'name' %></td>
    </tr>
    <tr>
      <th><%= f.label :address1 %></th>
      <td><%= f.text_field :address1 %></td>
    </tr>
    <tr>
      <th><%= f.label :address2 %></th>
      <td><%= f.text_field :address2 %></td>
    </tr>
    <tr>
      <th><%= f.label :tel %></th>
      <td><%= f.text_field :tel %></td>
    </tr>
    <tr>
      <th><%= f.label :is_head %></th>
      <td><%= f.check_box :is_head ,{}, true, false%></td>
    </tr>
  </table>
<% end %>
