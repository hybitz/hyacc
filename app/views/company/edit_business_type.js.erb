document.getElementById('company_form').action = '<%= url_for :action=>"update_business_type" %>';

var select = document.getElementById('company_business_type_id');

<% BusinessType.all.each do |bt| %>
select.options[select.options.length] = new Option('<%= bt.name %>', '<%= bt.id %>');
<% end %>

select.value = '<%= @company.business_type_id %>';