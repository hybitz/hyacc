<table>
  <tr>
    <th colspan="3">簡易入力設定</th>
  </tr>
  <tr>
    <th>削除</th>
    <th>勘定科目</th>
    <th>ショートカットキー</th>
  </tr>

  <% @profile.simple_slip_settings.each_with_index do |sss, i| %>
    <%= render 'simple_slip_setting_fields', :sss => sss, :index => i %>
  <% end %>

  <tr>
    <td colspan="3" style="text-align: right;">
      <script>
        function add_simple_slip_setting(trigger) {
          var url = '<%= url_for :action => 'add_simple_slip_setting' %>';
          var params = {
            index: $(trigger).closest('table').find('tr').length,
            format: 'html'
          };

          $.get(url, params, function(html) {
            $(trigger).before(html);
          });
        }
      </script>
      <%= link_to '勘定科目追加', '#', :onclick => 'add_simple_slip_setting(this); return false;' %>
    </td>
  </tr>
</table>
