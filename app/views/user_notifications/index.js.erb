var notification_dialog = hyacc.current_dialog({title: 'お知らせ'});

if (window.location.pathname === '/') {
  const original_close = notification_dialog.close;
  notification_dialog.close = function() {
    original_close.call(this);
    setTimeout(function() {
      location.reload();
    }, 100);
   }
}

notification_dialog.show('<%=j(render 'index')%>');
