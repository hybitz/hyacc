<div class="payroll_form">
  <%= form_with model: @payroll, id: 'payroll_form', remote: true do |f| %>
    <%= f.hidden_field :employee_id %>

    <table class="table">
      <tr>
        <th>年月</th>
        <td><%= f.hidden_field :ym %><%= f.object.ym %></td>
        <td></td>
        <td></td>
        <th>労働日数</th>
        <td><%= f.text_field :days_of_work, :maxlength => 2 %></td>
      </tr>
      <tr>
        <th><%= f.label :base_salary %></th>
        <td><%= f.text_field :base_salary, :maxlength => 10, class: 'salary' %></td>
        <td></td>
        <td></td>
        <th>労働時間</th>
        <td><%= f.text_field :hours_of_work, :maxlength => 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :commuting_allowance %></th>
        <td><%= f.text_field :commuting_allowance, :maxlength => 6, class: 'salary' %></td>
        <td></td>
        <td></td>
        <th>休日労働時間数</th>
        <td><%= f.text_field :hours_of_day_off_work, :maxlength => 5 %></td>
      </tr>
      <tr>
        <th>健康保険料</th>
        <td>
          <%= f.text_field :health_insurance, :maxlength => 10 %>
          <label><%= f.radio_button :credit_account_type_of_insurance, '0' %>預り金</label>
          <label><%= f.radio_button :credit_account_type_of_insurance, '1' %>立替金</label>
        </td>
        <td></td>
        <td></td>
        <th>早出残業時間数</th>
        <td><%= f.text_field :hours_of_early_work, :maxlength => 5 %></td>
      </tr>
      <tr>
        <th>厚生年金保険料</th>
        <td>
          <%= f.text_field :pension, :maxlength => 10 %>
          <label><%= f.radio_button :credit_account_type_of_pension, '0' %>預り金</label>
          <label><%= f.radio_button :credit_account_type_of_pension, '1' %>立替金</label>
        </td>
        <td></td>
        <td></td>
        <th>深夜労働時間数</th>
        <td><%= f.text_field :hours_of_late_night_work, :maxlength => 5 %></td>
      </tr>
      <% unless @payroll.employee.executive? %>
        <tr>
          <th>雇用保険料</th>
          <td>
            <%= f.text_field :employment_insurance, :maxlength => 10 %>
            <label><%= f.radio_button :credit_account_type_of_employment_insurance, '0' %>預り金</label>
            <label><%= f.radio_button :credit_account_type_of_employment_insurance, '1' %>立替金</label>
          </td>
        </tr>
      <% end %>
      <tr>
        <th>所得税</th>
        <td>
          <%= f.text_field :income_tax, :maxlength => 10 %>
          <label><%= f.radio_button :credit_account_type_of_income_tax, '0' %>預り金</label>
          <label><%= f.radio_button :credit_account_type_of_income_tax, '1' %>立替金</label>
        </td>
      </tr>
      <tr>
        <th><%= f.label :inhabitant_tax %></th>
        <td>
          <%= f.text_field :inhabitant_tax, :maxlength => 10 %>
          <label><%= f.radio_button :credit_account_type_of_inhabitant_tax, '0' %>預り金</label>
          <label><%= f.radio_button :credit_account_type_of_inhabitant_tax, '1' %>立替金</label>
        </td>
      </tr>
      <tr>
        <th>従業員への未払費用</th>
        <td><%= f.text_field :accrued_liability, :maxlength => 10 %></td>
      </tr>
  
      <% if @payroll.ym.to_s.slice(4,2) == "12" %>
        <tr>
          <th>年末調整額（過払分）</th>
          <td><%= f.text_field :annual_adjustment, :maxlength => 10 %></td>
        </tr>
      <% end %>
  
      <tr>
        <th>給与支払日</th>
        <td><%= f.text_field :pay_day, :class => 'datepicker' %></td>
      </tr>
    </table>
  <% end %>
</div>
