<%= flash_notice %>

<table class="mm bank_accounts table table-hover table-striped">
  <thead>
    <tr>
      <th>金融機関</th>
      <th>支店</th>
      <th class="text-center">区分</th>
      <th class="text-center">口座番号</th>
      <th>口座名</th>
      <th>口座名義</th>
      <th class="text-center">給与支払口座</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bank_accounts.each do |ba| %>
      <tr>
        <td><%= ba.bank_name %></td>
        <td><%= ba.bank_office_name %></td>
        <td class="text-center"><%= ba.financial_account_type_name %></td>
        <td class="text-center"><%= ba.code %></td>
        <td><%= ba.name %></td>
        <td><%= ba.holder_name %></td>
        <td class="text-center"><%= ba.for_payroll? %></td>
        <td class="text-center">
          <%= link_to '編集', edit_mm_bank_account_path(ba), class: 'btn btn-light', remote: true %>
          <%= link_to '削除', mm_bank_account_path(ba), class: 'btn btn-light', data: {confirm: "#{ba.name} を削除します。\nよろしいですか？"}, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="m-4">
  <%= link_to '追加', new_mm_bank_account_path, class: 'btn btn-light', remote: true %>
</div>
