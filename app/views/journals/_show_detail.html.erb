<tr data-detail_id="<%= jd.id %>" data-detail_no="<%= jd.detail_no %>" data-index="<%= index %>">
  <td><%= jd.dc_type_name %></td>
  <td><%= jd.account.code + ":" + jd.account_name %></td>
  <td><%= jd.sub_account_name %></td>
  <% if branch_mode %>
    <td><%= jd.branch_name %></td>
  <% end %>
  <td class="amount"><%= to_amount(jd.input_amount) %></td>
  <td>
    <%= jd.tax_type_name %>
    <%= "#{jd.tax_rate_percent}%" unless jd.tax_type_nontaxable? %>
  </td>
  <td class="amount"><%= to_amount(jd.tax_amount, :show_zero => true) %></td>
  <td class="amount"><%= to_amount(jd.tax_type == TAX_TYPE_EXCLUSIVE ? jd.input_amount + jd.tax_amount : jd.input_amount ) %></td>
  <td nowrap>
    <a href="#" onclick="journal.flip_detail(this); return false;"><%= message_for_details %></a>
  </td>
</tr>
<tr style="<%= style_for_details %>">
  <td rowspan="3" align="center">計上日<br/>振替</td>
  <td colspan="2">
    <input type="checkbox" value="<%= AUTO_JOURNAL_TYPE_PREPAID_EXPENSE %>"
           <%= jd.auto_journal_type == AUTO_JOURNAL_TYPE_PREPAID_EXPENSE ? 'checked' : '' %> />
    翌月の費用
  </td>
  
  <% if branch_mode %>
  <td><%= render 'get_allocation', :jd => jd, :index => index %></td>
  <% end %>
  
  <td colspan="3">
    <div style="text-align: right; width: 100%;"><%= jd.note %></div>
  </td>
  <td></td>
  <td rowspan="3" colspan="2"></td>
</tr>
<tr style="<%= style_for_details %>">
  <td colspan="2">
    <input type="checkbox" value="<%= AUTO_JOURNAL_TYPE_ACCRUED_EXPENSE %>"
           <%= jd.auto_journal_type == AUTO_JOURNAL_TYPE_ACCRUED_EXPENSE ? 'checked' : '' %> />
    前月の費用
  </td>
  <td rowspan="2" colspan="<%= colspan_of_account_details_for_show %>">
    <div id="journal_details_<%= index %>_account_detail" style="margin:5px">
      <%= render_account_details jd.account_id, :locals => {:jd => jd, :index => index} %>
    </div>
  </td>
  <td></td>
</tr>
<tr style="<%= style_for_details %>">
  <td colspan="2" nowrap>
    <input type="checkbox" value="<%= AUTO_JOURNAL_TYPE_DATE_INPUT_EXPENSE %>"
           <%= jd.auto_journal_type == AUTO_JOURNAL_TYPE_DATE_INPUT_EXPENSE ? 'checked' : '' %> />
    <%= jd.auto_journal_year || '----' %> 年
    <%= jd.auto_journal_month || '--' %> 月
    <%= jd.auto_journal_day || '--' %> 日の費用
  </td>
  <td></td>
</tr>
  