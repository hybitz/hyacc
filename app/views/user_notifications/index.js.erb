var options = {
  title: 'お知らせ'
};

hyacc.current_dialog(options).show('<%=j(render 'index')%>');

$(document).one('click', '.ui-dialog-buttonset, .ui-dialog-titlebar-close', function () {
  setTimeout(function () {
    if (window.location.pathname === '/') {
      location.reload();
    }
  }, 100);
});
