<%= flash_notice %>

<%= form_for @user, :remote => true do |f| %>
  <div style="margin:0px 5px 5px 0px; text-align: right;">
    <%= f.submit %>
  </div>
  <div>
    <div style="float: left;">
      <table>
        <tr>
          <th><%= f.label :login_id %></th>
          <td>
            <% if @user.new_record? %>
              <%= f.text_field :login_id %>
            <% else %>
              <%= @user.login_id %>
            <% end %>
          </td>
        </tr>

        <%= f.fields_for "employee_attributes", @user.employee do |e_fields| %>
          <tr>
            <th><%= e_fields.label :last_name, '姓' %></th>
            <td>
              <%= e_fields.hidden_field :id %>
              <%= e_fields.text_field :last_name %>
            </td>
          </tr>
          <tr>
            <th><%= e_fields.label :first_name, '名' %></th>
            <td><%= e_fields.text_field :first_name %></td>
          </tr>
          <tr>
            <th><%= e_fields.label :sex, '性別' %></th>
            <td><%= e_fields.select :sex, sex_types %></td>
          </tr>
          <tr>
            <th><%= e_fields.label :employment_date, '入社年月日' %></th>
            <td><%= e_fields.date_select :employment_date %></td>
          </tr>
          <tr>
            <th><%= e_fields.label :zip_code, '郵便番号' %></th>
            <td><%= e_fields.text_field :zip_code %></td>
          </tr>
          <tr>
            <th><%= e_fields.label :address, '住所' %></th>
            <td><%= e_fields.text_field :address %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>