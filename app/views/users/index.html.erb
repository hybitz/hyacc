<%= flash_notice %>

<table class="users">
  <tr>
    <th>ログインID</th>
    <th>氏名</th>
    <th>状態</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.login_id %></td>
      <td><%= user.employee.full_name %></td>
      <td><%= HyaccConstants::DELETED_TYPES[user.deleted] %></td>
      <td><%= link_to '参照', {:action => 'show', :id => user.id}, :remote => true %></td>
      <td><%= link_to '編集', {:action => 'edit', :id => user.id}, :remote => true %></td>
      <td><%= link_to '削除', {:action => 'destroy', :id => user}, data: {confirm: '削除します。よろしいですか？'}, :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users %>
<%= link_to '追加', {:action => 'new'}, :class => 'add', :remote => true %>

