<script>
  $(document).ready(function() {
    hyacc.init_datepicker();
  });
</script>
<%= flash_notice_in_span %>
<%= form_with model: [:bs, @investment], data: {remote: true} do |f| %>
  <table>
    <tr>
      <th><%= f.label :yyyymmdd %></th>
      <td><%= f.text_field :yyyymmdd, { class: 'datepicker' }.merge(investment_form_readonly_opts(@investment)) %></td>
    </tr>
    <tr>
      <th><%= f.label :bank_account_id %></th>
      <td><%= "金融口座マスタに証券口座が登録されていません。" if securities_accounts.empty? %>
          <%= f.hidden_field :bank_account_id, value: @investment.bank_account_id if investment_form_locked?(@investment) %>
          <%= f.select :bank_account_id, to_options(securities_accounts), {}, disabled: investment_form_locked?(@investment) if securities_accounts.present? %></td>
    </tr>
    <tr>
      <th><%= f.label :customer_name %></th>
      <td><%= "取引先マスタに投資先が登録されていません。" if @customers.length == 0 %>
          <%= f.select :customer_id, to_options(@customers), {} if @customers.length > 0 %></td>
    </tr>
    <tr>
      <th><%= f.label :buying_or_selling %></th>
      <td><%= f.hidden_field :buying_or_selling, value: @investment.buying_or_selling if investment_form_locked?(@investment) %>
          <%= f.radio_button :buying_or_selling, '1', { checked: @investment.buying_or_selling.blank? || @investment.buying_or_selling == '1', disabled: investment_form_locked?(@investment) } %>購入　<%= f.radio_button :buying_or_selling, '0', { checked: @investment.buying_or_selling == '0', disabled: investment_form_locked?(@investment) } %>売却</td>
    </tr>
    <tr>
      <th><%= f.label :for_what %></th>
      <td><%= f.hidden_field :for_what, value: @investment.for_what if investment_form_locked?(@investment) %>
          <%= f.radio_button :for_what, HyaccConst::SECURITIES_TYPE_FOR_TRADING, { checked: @investment.for_what.blank? || @investment.for_what.to_s == HyaccConst::SECURITIES_TYPE_FOR_TRADING.to_s, disabled: investment_form_locked?(@investment) } %>売買目的（1年以内）　<%= f.radio_button :for_what, HyaccConst::SECURITIES_TYPE_FOR_INVESTMENT, { checked: @investment.for_what.present? && @investment.for_what.to_s == HyaccConst::SECURITIES_TYPE_FOR_INVESTMENT.to_s, disabled: investment_form_locked?(@investment) } %>投資目的（1年越え）</td>
    </tr>
    <tr>
      <th><%= f.label :shares %></th>
      <td><%= f.text_field :shares %></td>
    </tr>
    <tr>
      <th><%= f.label :trading_value %></th>
      <td><%= f.text_field :trading_value, investment_form_readonly_opts(@investment) %></td>
    </tr>
    <tr>
      <th><%= f.label :gains %></th>
      <td><%= f.text_field :gains, investment_form_readonly_opts(@investment) %></td>
    </tr>
    <tr>
      <th><%= f.label :charges, "手数料（税込）" %></th>
      <td><%= f.text_field :charges, investment_form_readonly_opts(@investment) %></td>
    </tr>
  </table>
  <%= f.hidden_field :journal_id, value: @investment.journal.id if investment_form_locked?(@investment) %>
<% end %>
