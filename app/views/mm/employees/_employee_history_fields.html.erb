<%= fields_for "employee[employee_histories_attributes]", eh, :index => index do |f| %>
  <tr>
    <td>
      <%= f.hidden_field :id %>
      <%= f.check_box :_destroy %>
      <%= f.text_field :start_date, :class => 'datepicker' %>
    </td>
    <td align="center">
      <%= f.number_field :num_of_dependent, :maxlength=>2, :style=>'width: 3em; text-align: center' %>人
    </td>
    <td><%= link_to '削除', '#', :onclick => 'employee.remove_num_of_dependant(this); return false;' %></td>
  </tr>
<% end %>
