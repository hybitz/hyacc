<script>
  $(document).ready(function() {
    hyacc.init_datepicker();
  });
</script>
<%= form_with model: [:mm, @skill] do |f| %>
  <%= flash_notice %>
  <% if @skill.new_record? %>
    <%= f.hidden_field :employee_id %>
    <%= f.hidden_field :qualification_id %>
  <% end %>

  <table class="m-2">
    <tr>
      <th><%= f.label :qualification_id %></th>
      <td>
        <%= f.object.qualification.name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :qualified_on %></th>
      <td><%= f.text_field :qualified_on, class: 'datepicker' %></td>
    </tr>
  </table>
<% end %>
