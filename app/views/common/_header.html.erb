<div class="header">
  <% if @company.logo.present? %>
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag show_logo_company_path(@company, :version => 'icon') %>
      <% end %>
    </div>
    <div style="float: left; vertical-align: top;">
      <%= current_user.company.current_fiscal_year_int %>年度
    </div>
  <% else %>
    <div style="float: left; margin-left: 10px;">
      <%= link_to @company.name, root_path %>
      |
      <%= current_user.company.current_fiscal_year_int %>年度
    </div>
  <% end %>

  <div style="text-align: right;">
    <nobr>
        <%= link_to "#{current_user.employee.last_name} #{current_user.employee.first_name} さん", edit_profile_path(current_user) %>
        |
        <% if branch_mode %>
          所属部門：<%= current_user.employee.default_branch_name %>
          |
        <% end %>
        <%= link_to 'ログアウト', destroy_session_path(current_user), :method => 'delete' %>
    </nobr>
  </div>
</div>
