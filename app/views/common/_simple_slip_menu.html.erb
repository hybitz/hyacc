<% current_user.simple_slip_settings.each do |sss| %>
  <%= link_to "#{sss.shortcut_key[5]}.#{sss.account.name}", {:controller => "simple/#{sss.account.code}"},
        :style => style_for_menu(sss.account.code), :title => "#{sss.account.name}　　#{sss.shortcut_key}" %>
  |
<% end %>

<script>
  <% current_user.simple_slip_settings.each do |sss| %>
    shortcut.add("<%= sss.shortcut_key %>", function() { 
      document.location.href = "<%= url_for :controller=>"simple/#{sss.account.code}" %>";
    });
  <% end %>
</script>
